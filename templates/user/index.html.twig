{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="page-title">
        <div class="title_left">
            <h3>Tableau des Utilisateurs</h3>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Utilisateurs :</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <p class="text-muted font-13 m-b-30">
                                    Base de donnée de ce site
                                </p>
                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                    <tr>
                                        <th>ID </th>
                                        <th>Prénom  </th>
                                        <th>Nom  </th>
                                        <th>Mot de passe </th>
                                        <th>Image </th>
                                        <th>Actions </th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.id }}</td>
                                            <td>{{ user.firstName }}</td>
                                            <td>{{ user.lastName }}</td>
                                            <td>{{ user.password }}</td>
                                            <td>{{ user.image }}</td>
                                            <td>
                                                {{ include('user/_action.html.twig') }}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="6">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-12"><div class="ln_solid"></div></div>
                            <div class="col-12">
                                <div class="item form-group">
                                    <a href="{{ path('user_new') }}" target="_blank" role="button" class="btn btn-primary">
                                        <span class="fa fa-plus-square"></span>
                                        Ajouter un nouveau utilisateur
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

